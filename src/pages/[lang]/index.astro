    specialty: lang === 'ar' ? 'القلب والأوعية الدموية' : 'Cardiovascular',
    experience: lang === 'ar' ? '٢٢+ سنة' : '22+ years',
    availability: lang === 'ar' ? 'الأربعاء-الأحد' : 'Wed-Sun'
  }
