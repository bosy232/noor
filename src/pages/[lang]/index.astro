import Layout from '../../layouts/Layout.astro';
import { languages, ui } from '../../i18n/ui';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}

const { lang } = Astro.params;
const t = ui[lang];

const specializations = [
