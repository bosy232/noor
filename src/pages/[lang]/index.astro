---

<Layout title={lang === 'ar' ? 'مستشفى نور الشروق' : 'Noor Al-Shorouk Hospital'} lang={lang}>
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-r from-primary to-secondary text-white min-h-[90vh] flex items-center">
      <div class="absolute inset-0 bg-black/20"></div>
      <div class="container mx-auto px-4 relative">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-5xl md:text-7xl font-bold mb-6 animate-slide-up">{t['hero.welcome']}</h1>
          <p class="text-xl md:text-2xl mb-12 animate-slide-up" style="animation-delay: 200ms;">{t['hero.subtitle']}</p>
          <div class="flex flex-col sm:flex-row justify-center gap-4 animate-slide-up" style="animation-delay: 400ms;">
            <a href="#contact" class="group bg-white text-primary px-8 py-4 rounded-md hover:bg-gray-100 transition-all duration-300 text-lg font-semibold relative overflow-hidden">
              <span class="relative z-10 group-hover:-translate-y-1 transition-transform duration-300 inline-block">{t['hero.book']}</span>
              <div class="absolute inset-0 bg-accent transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
            </a>
            <a href="#services" class="group border-2 border-white px-8 py-4 rounded-md hover:bg-white/10 transition-all duration-300 text-lg font-semibold relative overflow-hidden">
              <span class="relative z-10 group-hover:-translate-y-1 transition-transform duration-300 inline-block">{t['hero.services']}</span>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="py-12 bg-white">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          {stats.map((stat, index) => (
            <div class="text-center group" style={`animation-delay: ${index * 100}ms`}>
              <div class="text-4xl md:text-5xl font-bold text-primary mb-2 group-hover:scale-110 transition-transform duration-300">{stat.number}</div>
              <div class="text-gray-600">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-4xl font-bold mb-8 relative inline-block">
            {t['about.title']}
            <div class="absolute bottom-0 left-0 w-full h-1 bg-accent transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></div>
          </h2>
          <p class="text-lg text-gray-600 mb-8">{t['about.description']}</p>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
            <div class="p-8 bg-gray-50 rounded-lg hover:shadow-xl transition-all duration-300 group hover:-translate-y-2">
              <div class="text-4xl mb-4 text-accent group-hover:animate-float">🏥</div>
              <h3 class="text-xl font-bold mb-2">{t['about.emergency']}</h3>
              <p class="text-gray-600">{t['about.emergency.desc']}</p>
            </div>
            <div class="p-8 bg-gray-50 rounded-lg hover:shadow-xl transition-all duration-300 group hover:-translate-y-2">
              <div class="text-4xl mb-4 text-accent group-hover:animate-float">⚕️</div>
              <h3 class="text-xl font-bold mb-2">{t['about.equipment']}</h3>
              <p class="text-gray-600">{t['about.equipment.desc']}</p>
            </div>
            <div class="p-8 bg-gray-50 rounded-lg hover:shadow-xl transition-all duration-300 group hover:-translate-y-2">
              <div class="text-4xl mb-4 text-accent group-hover:animate-float">👨‍⚕️</div>
              <h3 class="text-xl font-bold mb-2">{t['about.team']}</h3>
              <p class="text-gray-600">{t['about.team.desc']}</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12">{t['services.title']}</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {specializations.map(spec => (
            <div class="bg-white p-8 rounded-lg shadow-md group hover:shadow-xl transition-all duration-300 hover:-translate-y-2">
              <div class="text-4xl mb-4 group-hover:animate-float">{spec.icon}</div>
              <h3 class="text-2xl font-bold mb-4 group-hover:text-primary transition-colors">{spec.name}</h3>
              <p class="text-gray-600">{spec.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Specialties Section -->
    <section id="specialties" class="py-20">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12">{t['specialties.title']}</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          {specialties.map(specialty => (
            <div class="group bg-gray-50 p-6 rounded-lg text-center hover:bg-primary hover:shadow-xl transition-all duration-300 cursor-pointer">
              <p class="font-semibold group-hover:text-white transition-colors">{specialty}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Doctors Section -->
    <section id="doctors" class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12">{t['doctors.title']}</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {doctors.map(doctor => (
            <div class="bg-white p-8 rounded-lg shadow-md text-center group hover:shadow-xl transition-all duration-300 hover:-translate-y-2">
              <div class="w-32 h-32 bg-gray-200 rounded-full mx-auto mb-6 overflow-hidden group-hover:ring-4 ring-accent transition-all"></div>
              <h3 class="text-2xl font-bold mb-2 group-hover:text-primary transition-colors">{doctor.name}</h3>
              <p class="text-accent font-semibold mb-2">{doctor.specialty}</p>
              <p class="text-gray-600 mb-2">{doctor.experience} {t['doctors.experience']}</p>
              <p class="text-sm text-gray-500">{t['doctors.available']}: {doctor.availability}</p>
              <button class="mt-4 px-6 py-2 bg-primary text-white rounded-md hover:bg-accent transition-colors duration-300">
                {t['doctors.book']}
              </button>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12">{t['contact.title']}</h2>
        <div class="max-w-4xl mx-auto">
          <div class="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-8">
              <div class="group">
                <h3 class="text-2xl font-bold mb-6 group-hover:text-primary transition-colors">{t['contact.location']}</h3>
                <div class="space-y-4 text-gray-600">
                  <p class="group-hover:translate-x-2 transition-transform">{t['footer.address.line1']}</p>
                  <p class="group-hover:translate-x-2 transition-transform" style="transition-delay: 100ms">{t['footer.address.line2']}</p>
                </div>
              </div>
              <div>
                <h3 class="text-2xl font-bold mb-6 group-hover:text-primary transition-colors">{t['contact.numbers']}</h3>
                <div class="space-y-4">
                  <p class="flex items-center text-gray-600 group">
                    <span class="font-semibold w-24">{t['contact.main']}:</span>
                    <a href="tel:0226888860" class="text-primary hover:text-accent transition-colors">0226888860</a>
                  </p>
                  <p class="flex items-center text-gray-600 group">
                    <span class="font-semibold w-24">{t['contact.emergency']}:</span>
                    <