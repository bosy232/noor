  {
    name: lang === 'ar' ? 'د. السيد زكي' : 'Dr. El-Sayed Zaki',
    specialty: lang === 'ar' ? 'الطب الباطني' : 'Internal Medicine',
    experience: lang === 'ar' ? '٢٥+ سنة' : '25+ years',
    availability: lang === 'ar' ? 'الإثنين-الخميس' : 'Mon-Thu'
  },
  {
