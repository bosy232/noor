    availability: lang === 'ar' ? 'الثلاثاء-السبت' : 'Tue-Sat'
  },
  {
    name: lang === 'ar' ? 'د. سليمان المغربي' : 'Dr. Soliman El-Maghraby',
    specialty: lang === 'ar' ? 'جراحة المخ والأعصاب' : 'Neurosurgery',
    experience: lang === 'ar' ? '١٨+ سنة' : '18+ years',
    availability: lang === 'ar' ? 'الإثنين-الجمعة' : 'Mon-Fri'
  },
  {
